{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": false, 
	"outDir": "./dist/",
	"jsx": "react",
	"jsxFactory": "h",
	 "typeRoots": [ "./types", "./node_modules/@types"]


    },
    "compileOnSave": false,
    "exclude": [
      "node_modules"
    ],
    "include": [
	    "./app/**/*.tsx",
	    "./app/**/*.ts"
    ]

}
